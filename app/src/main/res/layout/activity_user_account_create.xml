<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_user_account_create"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="edu.orangecoastcollege.cs273.vnguyen629.occlostandfound.UserAccountCreateActivity"
    android:orientation="vertical">

    <TextView
        android:text="@string/enter_username_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:layout_weight="0" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/userEditText"
        android:layout_weight="0"
        android:hint="@string/user_name_text"
        android:maxLines="1"
        android:singleLine="true" />

    <TextView
        android:text="@string/enter_password_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/passwordTextView"
        android:layout_weight="0" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/passwordEditText"
        android:layout_weight="0"
        android:hint="@string/password_text"
        android:maxLines="1"
        android:singleLine="true" />

    <TextView
        android:text="@string/reenter_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/renterPassEditText"
        android:layout_weight="0" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/reenterPasswordEditText"
        android:layout_weight="0"
        android:hint="@string/reenter_password" />

    <TextView
        android:text="@string/enter_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/emailTextView"
        android:layout_weight="0" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/emailEditText"
        android:layout_weight="0"
        android:hint="@string/student_email_text"
        android:maxLines="1"
        android:singleLine="true" />

    <TextView
        android:text="@string/enter_student_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView6"
        android:layout_weight="0" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/idEditText"
        android:layout_weight="0"
        android:hint="@string/student_id_text"
        android:maxLines="1"
        android:singleLine="true" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:text="@string/create_account_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/CreateButton"
            android:layout_weight="1" />

        <Button
            android:text="@string/back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/backButton"
            android:layout_weight="1" />
    </LinearLayout>
</LinearLayout>
