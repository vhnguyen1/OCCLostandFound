<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false"
    tools:context="edu.orangecoastcollege.cs273.vnguyen629.occlostandfound.MainMenuActivity">

    <ImageView
        android:layout_width="65dp"
        android:layout_height="65dp"
        app:srcCompat="@drawable/faq_icon"
        android:id="@+id/imageView13"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/menuMapDescriptionTextView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:cropToPadding="true"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:clickable="true"
        android:layout_marginRight="5dp" />

    <TextView
        android:text="@string/reported_lost_items_description_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/reportItemTitleTextView"
        android:layout_toRightOf="@+id/menuReportItemImageView"
        android:id="@+id/textView12"
        android:layout_alignBottom="@+id/menuReportItemImageView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textSize="18sp"
        android:clickable="true"
        android:onClick="openReportedItemsList" />

    <ImageView
        app:srcCompat="@drawable/occ_image"
        android:id="@+id/occMainMenuImageView"
        android:adjustViewBounds="true"
        android:cropToPadding="true"
        android:scaleType="fitCenter"
        android:layout_column="0"
        android:layout_row="0"
        android:layout_rowSpan="5"
        android:layout_columnSpan="5"
        android:elevation="1dp"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        app:srcCompat="@drawable/item_list_icon"
        android:id="@+id/menuReportItemImageView"
        android:adjustViewBounds="true"
        android:cropToPadding="true"
        android:scaleType="fitCenter"
        android:layout_column="0"
        android:layout_row="9"
        android:clickable="true"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_below="@+id/occMainMenuImageView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="openReportedItemsList"
        android:layout_marginTop="5dp" />

    <TextView
        android:text="@string/reported_lost_items_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/occMainMenuImageView"
        android:layout_toEndOf="@+id/menuReportItemImageView"
        android:id="@+id/reportItemTitleTextView"
        android:textSize="30sp"
        android:layout_toRightOf="@+id/menuReportItemImageView"
        android:clickable="true"
        android:onClick="openReportedItemsList"
        android:layout_marginTop="5dp" />

    <ImageView
        android:clickable="true"
        android:layout_width="65dp"
        android:layout_height="65dp"
        app:srcCompat="@drawable/map_icon"
        android:id="@+id/menuMapImageView"
        android:layout_below="@+id/textView12"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="@string/title_activity_maps"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/menuMapTitleTextView"
        android:textSize="30sp"
        android:clickable="true"
        android:onClick="openReportedItemsList"
        android:layout_below="@+id/menuReportItemImageView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/menuReportItemImageView"
        android:layout_toEndOf="@+id/menuReportItemImageView" />

    <TextView
        android:text="@string/map_description_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/menuMapDescriptionTextView"
        android:textSize="18sp"
        android:clickable="true"
        android:onClick="openReportedItemsList"
        android:layout_below="@+id/menuMapTitleTextView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/menuMapImageView"
        android:layout_toEndOf="@+id/menuMapImageView" />

    <TextView
        android:text="@string/faq_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/menuMapDescriptionTextView"
        android:layout_toRightOf="@+id/menuMapImageView"
        android:layout_toEndOf="@+id/menuMapImageView"
        android:textSize="30sp"
        android:clickable="true"
        android:id="@+id/menuFAQTitleTextView"
        android:layout_marginTop="5dp" />

    <TextView
        android:text="@string/faq_description_text"
        android:textSize="18sp"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView16"
        android:layout_below="@+id/menuFAQTitleTextView"
        android:layout_alignLeft="@+id/menuFAQTitleTextView"
        android:layout_alignStart="@+id/menuFAQTitleTextView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="@string/need_account_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/menuNotSignedInTextView"
        android:textSize="18sp"
        android:layout_marginLeft="33dp"
        android:layout_marginStart="33dp"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/menuReportItemImageView"
        android:layout_toEndOf="@+id/menuReportItemImageView" />

    <TextView
        android:text="@string/here_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/menuClickToSignInTextView"
        android:textSize="18sp"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/menuNotSignedInTextView"
        android:layout_toRightOf="@+id/menuNotSignedInTextView"
        android:textColor="@android:color/holo_orange_dark"
        android:clickable="true"
        android:textStyle="normal|bold"
        android:paddingLeft="5dp" />

    <ImageView
        android:id="@+id/menuFAQImageView"
        android:cropToPadding="true"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:clickable="true"
        app:srcCompat="@drawable/about_icon"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_below="@+id/textView16"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView13"
        android:layout_alignLeft="@+id/textView16"
        android:layout_alignStart="@+id/textView16"
        android:id="@+id/textView18" />

</RelativeLayout>
