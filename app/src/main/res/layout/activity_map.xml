<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_map"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="edu.orangecoastcollege.cs273.vnguyen629.occlostandfound.MapActivity"
    android:orientation="vertical">

    <ImageView
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/mapImageView"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:background="@drawable/occ_map_hidden"
        android:layout_width="match_parent"
        android:layout_height="400dp" />

    <Button
        android:text="Show only LF Building"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/changeMapButton"
        android:gravity="center_horizontal"
        android:layout_below="@+id/mapImageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:onClick="mapChange" />

</RelativeLayout>
